<div class="color-white">
<h1>Mis Posteos</h1>
<table class="table">
	<tr>
		<th>Título</th>
		<th>Post</th>
		<th></th>
		<th></th>
    	<th></th>
	</tr>
	<% @posts.each do |post| %>
	<tr>
		<td><%= post.title %></td>
		<td><%= post.text %></td>
		
    	<td>
    		<div class="span6">
        	<%= link_to "Mostrar", blogger_post_path(post), :class => "btn btn-primary btn-claudia" %>
			</div>
    	</td>
    	<td>
    		<div class="span6">
        	<%= link_to "Editar", edit_post_path(post), :class => "btn btn-primary btn-claudia" %>
			</div>
    	</td>
    	<td>
    		<div class="span6">
        	<%= link_to "Eliminar", post_path(post), :class => "btn btn-primary btn-claudia", method: :delete, data: { confirm: '¿Estás seguro?' } %>
			</div>
    	</td>
	</tr>
	<% end %>
</table>
<div class="span6">
        <%= link_to "Nuevo Post", new_blogger_post_path, :class => "btn btn-primary btn-claudia" %>
        <br>
        <br>
</div>
</div>