<h1>Mis Posteos</h1>
<table class="table">
	<tr>
		<th>Título</th>
		<th>Texto</th>
		<th></th>
		<th></th>
    	<th></th>
	</tr>
	<% @posts.each do |post| %>
	<tr>
		<td><%= post.title %></td>
		<td><%= post.text %></td>
		<td><%= link_to '<Mostrar>', post_path(post) %></td>
    	<td><%= link_to '<Editar>', edit_post_path(post) %></td>
    	<td><%= link_to '<Eliminar>', post_path(post), method: :delete, data: { confirm: '¿Estás seguro?' } %></td>
	</tr>
	<% end %>
</table>
<div class="span6">
        <%= link_to "Nuevo Post", new_post_path, :class => "btn btn-primary btn-claudia" %>
        <br>
        <br>
</div>